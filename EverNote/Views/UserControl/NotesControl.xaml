<UserControl x:Class="EverNote.Views.UserControl.NotesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EverNote.Views.UserControl"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="300">
    <StackPanel>
            <TextBlock x:Name="TitleTextBlock"
                     Text="Note Title"
                     FontSize="15"
                     FontWeight="Bold"/>
            <TextBlock x:Name="EditedTextBlock"
                       Text="30 minutes"
                       FontSize="12"
                       Foreground="DodgerBlue"
                       Margin="0 10 0 0"/>
            <TextBlock x:Name="contentTextBlock"
                       Text="bdkjasbc dakldlasdlajd dlkahlda ldl asdhalkdlaj"
                       FontSize="12"
                       Foreground="DarkGray"
                       TextWrapping="Wrap"/>
    </StackPanel>
</UserControl>
